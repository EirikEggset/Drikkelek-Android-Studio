<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">


    <Button
        android:id="@+id/btn_drinking_game_continue"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:angle="90"

        android:background="#6F3CCA"
        android:centerColor="#C47CFB"
        android:endColor="#EBD2FF"

        android:startColor="#961DF3"
        android:text="@string/continue_btn"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_players"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/title_how_many_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/how_many_players_title"
        android:textAllCaps="false"
        android:textColor="@color/main_accent"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/table_players"
        android:layout_width="301dp"
        android:layout_height="446dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_drinking_game_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_how_many_players">

        <EditText
            android:id="@+id/player_name_1"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:autofillHints=""
            android:background="@drawable/rounded_square"
            android:capitalize="characters"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp" />

        <EditText
            android:id="@+id/player_name_2"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@drawable/rounded_square"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp" />

        <EditText
            android:id="@+id/player_name_3"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/player_name_4"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:visibility="gone"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/player_name_5"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:visibility="gone"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/player_name_6"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:visibility="gone"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/player_name_7"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:visibility="gone"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/player_name_8"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:visibility="gone"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/player_name_9"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:visibility="gone"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/player_name_10"
            style="@style/player_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:visibility="gone"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="192dp"
            tools:visibility="visible" />


    </TableLayout>

    <Button
        android:id="@+id/btn_add_player"
        android:layout_width="55dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_drinking_game_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@null"
        app:strokeColor="@color/white"
        app:strokeWidth="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>